<!-- views/projects.ejs -->
<section class="projects">
    <h2>Projects</h2>
    <div class="project-cards">
      <% projects.forEach(function(project) { %>
        <div class="project-card">
          <h3><%= project.title %></h3>
          <p><%= project.description %></p>
          <a href="<%= project.link %>">
            <img src="<%= project.image %>" alt="<%= project.title %>">
          </a>
          <a href="<%= project.link %>">View Project</a>
        </div>
      <% }); %>
    </div>
  </section>